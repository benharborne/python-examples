#:kivy 1.10.0

<MainWidget>:
    canvas.before:
        Color: 
            rgba: (1, 0, 0,1)
        Rectangle:
            size: self.size
            pos: self.pos
            
    GridLayout:
        width: 800  # works
        height: 100 # works
        cols:2
        Button:
            text: "Hello"
        Button:
            text: "World"

    GridLayout:
        width: 800  # works
        height: 100 # works
        cols:3
        pos: 0, 500 # works
        pos_hint: 0.5, 0.5 # doesn't work in Widget
        Button:
            text: "See"
            height: 50 # doesn't work in GridLayout
            size_hint: 0.5, 0.5 # works in GridLayout
        Button:
            text: "You"
        Button:
            text: "Later"
