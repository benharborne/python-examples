import turtle
import math

turtle.speed('fastest')

def draw_rectangle(width, height, color='red'):
    turtle.pd()
    turtle.color(color)

    for _ in range(2):
        turtle.forward(width)
        turtle.left(90)
        turtle.forward(height)
        turtle.left(90)


def draw_circle(radius, color='red'):
    turtle.pd()
    turtle.color(color)
    turtle.circle(radius)


def draw_pattern_rectangle(x, y, width, height, count, radius):
    rotation = 360 / count

    turtle.goto(x, y)
    
    for _ in range(count):
        # move from center to circle
        turtle.pu()
        #turtle.color('black')
        turtle.forward(radius)
        turtle.right(90+rotation/2)
        
        drawRectangle(x, y, width, height)

        # move from circle to center
        turtle.pu()
        #turtle.color('black')
        turtle.left(90+rotation/2)
        turtle.backward(radius)

        # rotate in circle
        turtle.right(rotation)

def draw_pattern_circle(x, y, r, count, radius):
    rotation = 360 / count

    turtle.goto(x, y)

    for _ in range(count):
        # move from center to circle
        turtle.pu()
        #turtle.color('black')
        turtle.forward(radius)
        turtle.right(90+rotation/2)

        drawCircle(x, y, r)

        # move from circle to center
        turtle.pu()
        #turtle.color('black')
        turtle.left(90+rotation/2)
        turtle.backward(radius)

        # rotate in circle
        turtle.right(rotation)
        
draw_pattern_rectangle(0, 0, 100, 100, 15, 50)
draw_pattern_circle(0, 0, 20, 15, 50)
